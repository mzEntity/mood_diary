<?xml version="1.0" encoding="utf-8"?>
<!-- discovery_fragment_layout.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/music_avatar"
         android:layout_height="300dp"
         android:layout_width="300dp"
         android:src="@drawable/ic_music"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true">
    </ImageView>
    <Button
        android:id="@+id/media_left_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/music_title_text"
        android:layout_toLeftOf="@id/music_title_text"
        android:layout_marginRight="10dp"
        android:text="prev" />
    <TextView android:id="@+id/music_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/music_avatar"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:text=""/>
    <Button
        android:id="@+id/media_right_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/music_title_text"
        android:layout_toRightOf="@id/music_title_text"
        android:layout_marginLeft="10dp"
        android:text="next" />
    <Button
        android:id="@+id/media_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/music_title_text"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:text="start" />
    <Button
        android:id="@+id/media_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/media_start"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:text="stop" />
    <!-- 添加其他视图或控件 -->
</RelativeLayout>